<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="kr.or.ddit.rmi.PrivateChatController" prefHeight="380.0" prefWidth="263.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Pane prefHeight="50.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lbTitle" layoutX="14.0" layoutY="15.0" text="1:1대화창" />
         </children>
      </Pane>
   </top>
   <center>
      <Pane prefHeight="300.0" prefWidth="276.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="taChatList" prefHeight="301.0" prefWidth="263.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tfChat" prefHeight="30.0" prefWidth="174.0" />
            <Button mnemonicParsing="false" onAction="#sendMessage" prefHeight="29.0" prefWidth="58.0" text="전송" />
            <Button mnemonicParsing="false" onAction="#close" prefHeight="29.0" prefWidth="58.0" text="닫기" />
